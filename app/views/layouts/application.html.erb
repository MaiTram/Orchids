<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Minh Thu Orchids - <%= @title %></title>
    <link rel="shortcut icon" href="/images/icon.png" />

    <%= stylesheet_link_tag 'reset-min'  %>
    <%= stylesheet_link_tag 'application'  %>

    <%= javascript_include_tag "jquery-1.4.2.min.js" %>
    <%= javascript_include_tag "jquery.fancybox-1.3.1.js" %>
    <%= javascript_include_tag "jquery.cycle.all.min.js" %>
    <%= javascript_include_tag "cufon-yui.js" %>
    <%= javascript_include_tag "AvantGarde.font.js" %>
    <script type="text/javascript">
      Cufon.replace(".avant_garde");
    </script>
  </head>

  <body>
    <div id="main">
      <div id="left">
        <%= render :partial => "/layouts/main_menu" %>
      </div>

      <div id="body_container">
        <%= yield %>
      </div>

      <div class="clear"></div>
    </div>

    <div id="bottom" class="avant_garde">Copyright 2011 Minh Thu Orchids</div>
    <script type="text/javascript"> Cufon.now(); </script>
  </body>
</html>

<script type="text/javascript">
  var $j = jQuery.noConflict();

  $j(document).ready(function(){
    $j('#body_container').show();
    $j('.thumb').fancybox();
    $j('.cufon-canvas').css("height", "20px");
    sm_coinslider();
  });

  function sm_coinslider() {
  $j('#intro-slider').cycle({
    fx:     'fade',
    speed:   4000,
    timeout: 3000,
    navigation: true,
    next:   '#intro-slider',
    pause:   1
  });
  }
</script>
